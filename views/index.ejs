          <h3 class="text-lg font-semibold text-gray-200 mb-3">
            Uploaded Files
          </h3>
          <ul
            id="uploadedFilesList"
            class="space-y-2 max-h-48 overflow-y-auto rounded-lg"
          ></ul>
        </div>
      </div>
